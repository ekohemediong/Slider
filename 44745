    <script>
        var counter=0
        function move(){
            var doc =document.getElementById("container")
            
            
            
            if (counter>110){
                counter=0
                 
            }
             
            doc.style.transform=`translateX(-${counter}%)`
            
            counter+=40
        }
        setInterval(move,2000)
        
        function back(){
            history.back()
        }
        
        function leave(){
            return "Are you sure you want to leave"
        }
        document.getElementById('back').onclick=back;
    </script>
